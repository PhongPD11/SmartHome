<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fdfdfd">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_marginTop="70dp"
                        android:id="@+id/tvWelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Good morning,"
                        android:textColor="@color/main_color"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Phong"
                        android:visibility="gone"
                        android:textColor="@color/text_color"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvWelcome" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvWeather"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginHorizontal="3dp"
                        app:cardCornerRadius="10dp"
                        app:layout_constraintTop_toBottomOf="@id/tvName">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

<!--                            <ImageView-->
<!--                                android:id="@+id/ivFrame"-->
<!--                                android:layout_width="fill_parent"-->
<!--                                android:layout_height="fill_parent"-->
<!--                                android:src="@drawable/ic_frame"-->
<!--                                android:scaleType="fitXY"-->
<!--                                app:layout_constraintEnd_toEndOf="parent"-->
<!--                                app:layout_constraintTop_toTopOf="parent"-->
<!--                                app:layout_constraintStart_toStartOf="parent"-->
<!--                                app:layout_constraintBottom_toBottomOf="parent"/>-->

                            <TextView
                                android:id="@+id/tvQuote"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="20dp"
                                android:layout_marginVertical="30dp"
                                android:textSize="20sp"
                                android:textColor="@color/brown_lv3"
                                tools:text="“In principle and reality, libraries are life-enhancing palaces of wonder.”"
                                android:textAlignment="center"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                            <TextView
                                android:id="@+id/tvAuth"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="40dp"
                                android:textSize="12sp"
                                android:textColor="@color/brown_lv2"
                                tools:text="- alo 123"
                                android:textAlignment="viewEnd"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tvQuote"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvFavorite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:visibility="gone"
                        android:layout_marginBottom="10dp"
                        android:layout_marginHorizontal="3dp"
                        app:cardCornerRadius="10dp"
                        app:layout_constraintTop_toBottomOf="@id/cvWeather">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/consFavorite"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:minHeight="200dp">

                            <ImageView
                                android:id="@+id/ivFav"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginHorizontal="10dp"
                                android:src="@drawable/ic_favourite"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/tvFavoriteTitle"
                                app:layout_constraintTop_toTopOf="@id/tvFavoriteTitle"
                                app:layout_constraintBottom_toBottomOf="@id/tvFavoriteTitle" />

                            <TextView
                                android:id="@+id/tvFavoriteTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:paddingVertical="10dp"
                                android:textColor="@color/main_color"
                                android:text="@string/favorite"
                                android:textSize="20sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/ivFav"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tvEmpty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/favorite_empty"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/lineFav"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                            <View
                                android:id="@+id/lineFav"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginHorizontal="10dp"
                                android:background="@color/main_color"
                                app:layout_constraintTop_toBottomOf="@id/tvFavoriteTitle" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvFav"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:orientation="horizontal"
                                tools:listitem="@layout/item_book"
                                android:layout_marginBottom="10dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/lineFav" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvTop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="20dp"
                        android:paddingBottom="10dp"
                        android:layout_marginHorizontal="3dp"
                        app:cardCornerRadius="10dp"
                        app:layout_constraintTop_toBottomOf="@id/cvFavorite">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/consTop"
                            android:minHeight="200dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/ivTop"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginHorizontal="10dp"
                                android:src="@drawable/ic_top_rated"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/tvTopTitle"
                                app:layout_constraintTop_toTopOf="@id/tvTopTitle"
                                app:layout_constraintBottom_toBottomOf="@id/tvTopTitle" />

                            <TextView
                                android:id="@+id/tvTopTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:paddingVertical="10dp"
                                android:text="@string/top_rated"
                                android:textColor="@color/main_color"
                                android:textSize="20sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/ivTop"
                                app:layout_constraintTop_toTopOf="parent" />

                            <View
                                android:id="@+id/lineTop"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginHorizontal="10dp"
                                android:background="@color/main_color"
                                app:layout_constraintTop_toBottomOf="@id/tvTopTitle" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvTop"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:orientation="horizontal"
                                android:layout_marginBottom="10dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/lineTop" />

                            <!--                        <TextView-->
                            <!--                            android:id="@+id/tvEmptyTrend"-->
                            <!--                            android:layout_width="wrap_content"-->
                            <!--                            android:layout_height="wrap_content"-->
                            <!--                            android:text="@string/favorite_empty"-->
                            <!--                            app:layout_constraintEnd_toEndOf="parent"-->
                            <!--                            app:layout_constraintStart_toStartOf="parent"-->
                            <!--                            app:layout_constraintTop_toBottomOf="@id/line"-->
                            <!--                            app:layout_constraintBottom_toBottomOf="parent"/>-->

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvSuggest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:layout_marginHorizontal="3dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:cardCornerRadius="10dp"
                        app:layout_constraintTop_toBottomOf="@id/cvTop">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/consSuggest"
                            android:minHeight="200dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/ivRecommend"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginHorizontal="10dp"
                                android:src="@drawable/ic_book_recommend"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/tvSuggestTitle"
                                app:layout_constraintTop_toTopOf="@id/tvSuggestTitle"
                                app:layout_constraintBottom_toBottomOf="@id/tvSuggestTitle" />

                            <TextView
                                android:id="@+id/tvSuggestTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:paddingVertical="10dp"
                                android:text="@string/book_recommendations"
                                android:textColor="@color/main_color"
                                android:textSize="20sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/ivRecommend"
                                app:layout_constraintTop_toTopOf="parent" />


                            <View
                                android:id="@+id/lineSuggest"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginHorizontal="10dp"
                                android:background="@color/main_color"
                                app:layout_constraintTop_toBottomOf="@id/tvSuggestTitle" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvRecommendation"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:orientation="horizontal"
                                android:layout_marginBottom="10dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/lineSuggest" />

                            <!--                        <TextView-->
                            <!--                            android:id="@+id/tvEmptyTrend"-->
                            <!--                            android:layout_width="wrap_content"-->
                            <!--                            android:layout_height="wrap_content"-->
                            <!--                            android:text="@string/favorite_empty"-->
                            <!--                            app:layout_constraintEnd_toEndOf="parent"-->
                            <!--                            app:layout_constraintStart_toStartOf="parent"-->
                            <!--                            app:layout_constraintTop_toBottomOf="@id/line"-->
                            <!--                            app:layout_constraintBottom_toBottomOf="parent"/>-->

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
